{
  "name": "flowtemplate",
  "version": "1.0.0",
  "description": "Electron Starter Template to Quick Start",
  "author": "ninguest & 9guest",
  "homepage": "https://github.com/9guest/ElecflowTemplate",
  "repository": "https://github.com/9guest/ElecflowTemplate",
  "license": "MIT",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "Electron",
    "Javascript",
    "QuickStart",
    "Starter",
    "Template"
  ],
  "build": {
    "appId": "com.ycs.elecflowtemplate",
    "productName": "ElecflowTemplate",
    "artifactName": "${productName}-${version}-${os}.${ext}",
    "directories": {
      "app": "",
      "output": "dist",
      "buildResources": "build"
    },
    "protocols": {
      "name": "elecflow",
      "schemes": [
        "elecflow"
      ]
    },
    "files": [
      "main.js",
      "src/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [],
    "asar": true,
    "asarUnpack": [],
    "mac": {
      "target": [
        "dmg",
        "zip",
        "pkg"
      ],
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico",
      "verifyUpdateCodeSignature": true,
      "signAndEditExecutable": true,
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "elecflow",
      "deleteAppDataOnUninstall": true,
      "installerIcon": "build/installerIcon.ico",
      "uninstallerIcon": "build/uninstallerIcon.ico",
      "installerHeaderIcon": "build/installerHeaderIcon.ico",
      "license": "build/license.txt",
      "include": "build/installer.nsh",
      "runAfterFinish": true,
      "artifactName": "${productName}-${version}-${os}.${ext}",
      "menuCategory": "ycs"
    },
    "portable": {
      "artifactName": "${productName}-portable-${version}-${os}.${ext}",
      "splashImage": "build/splash.bmp"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "build/icon.png",
      "category": "Utility"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "9guest",
        "repo": "ElecflowTemplate",
        "releaseType": "release"
      }
    ]
  },
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "26.1.0"
  },
  "dependencies": {
    "electron-updater": "6.7.0"
  }
}
